# Geotab API Credentials (optional — seed data used when not set)
GEOTAB_DATABASE=
GEOTAB_USERNAME=
GEOTAB_PASSWORD=
GEOTAB_SERVER=my.geotab.com

# Anthropic API Key (for Claude AI agent, missions, dispatcher)
ANTHROPIC_API_KEY=

# Smallest AI (voice STT/TTS pipeline)
SMALLEST_API_KEY=

# Twilio (optional — for real dispatch phone calls)
# When not set, dispatch falls back to AI-simulated conversations
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=       # Your purchased Twilio phone number (+1XXXXXXXXXX)
DISPATCH_PHONE_NUMBER=     # Dispatcher's phone number to call (+1XXXXXXXXXX)
NGROK_URL=                 # ngrok public URL for Twilio webhooks (dev only, e.g. https://xxxx.ngrok.io)

# Server
PORT=3000
NODE_ENV=development
